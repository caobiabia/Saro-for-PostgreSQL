SELECT     MIN(k.keyword) AS movie_keyword,     MIN(n.name) AS actor_name,     MIN(t.title) AS hero_movie FROM     cast_info AS ci,     keyword AS k,     movie_keyword AS mk,     name AS n,     title AS t WHERE     k.keyword in (         'returning-character-killed-off','sobbing-female','sublimation','stranded-on-rooftop','buzz-lightyear','stack-of-coins','flooded-tunnel','nursery','fencing-mask','reference-to-jisaburo-ozawa'     )     AND n.name LIKE '%Downey%Robert%'     AND t.production_year > 2005     AND k.id = mk.keyword_id     AND t.id = mk.movie_id     AND t.id = ci.movie_id     AND ci.movie_id = mk.movie_id     AND n.id = ci.person_id;
